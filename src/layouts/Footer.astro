---
import { Icon } from "astro-icon/components";

interface Props {
  isRed?: boolean;
}

const { isRed } = Astro.props;
---

<style>
  .footer {
    bottom: 35px;
    position: fixed;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    color: var(--red);
  }

  .footer {
    color: var(--red);

    a:visited {
      color: var(--red);
    }
  }

  .footer--red {
    color: var(--black);

    a:visited {
      color: var(--black);
    }
  }
</style>

<footer class:list={["footer", { "footer--red": isRed }]}>
  <div class="grid-container w-full">
    <div class="col-start-2 col-span-10 flex w-full justify-between">
      <div>00 <br />WELCOME</div>
      <div class={"text-center flex items-end pb-2"}>
        <p>© MANUELENIS 2024 • Site by XXXX™</p>
      </div>
      <div class={"flex gap-2 items-center"}>
        <a class="p-2" target="_blank" href="https://www.instagram.com/">
          <Icon width="20" height="24" name="instagram" />
        </a>
        <a class="p-2" target="_blank" href="https://www.youtube.com/">
          <Icon width="24" height="24" name="vimeo" />
        </a>
        <a class="p-2" target="_blank" href="https://www.vimeo.com/">
          <Icon width="18" height="32" name="youtube" />
        </a>
      </div>
    </div>
  </div>
</footer>
