---
import "@fontsource/atkinson-hyperlegible/400.css";
import "@fontsource/atkinson-hyperlegible/700.css";
import "@/styles/base.css";

import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import Cursor from "@/components/Cursor.astro";

import { ViewTransitions } from "astro:transitions";

interface Props {
  title?: string;
  isRed?: boolean;
}

const { title: titleProp, isRed } = Astro.props;

const defaultTitle = "Manuel Lenis";
const defaultTitle2 = titleProp ? titleProp : "Film Director / Photographer";
const defaultDescription = "Colombian-born film director and photographer";
const title = `${defaultTitle} - ${defaultTitle2}`;
---

<html lang="en">
  <head transition:animate="none">
    <meta charset="UTF-8" />
    <title>{title}</title>
    <meta name="description" content={defaultDescription} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <ViewTransitions />
  </head>
  <body class:list={[{ "content--red": isRed }]}>
    <Header />
    <main id="main-container" class:list={[{ "content--red": isRed }]}>
      <slot />
    </main>
    <Footer />
    <Cursor />
    <script>
      import "../scripts/App";
    </script>
  </body>
</html>
