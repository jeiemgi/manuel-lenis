---
import { Icon } from "astro-icon/components";
---

<footer class="bottom-8 fixed w-full flex items-center justify-center">
  <div class="grid-container w-full">
    <div
      class="px-10 md:px-0 col-span-6 md:col-start-2 md:col-span-10 flex w-full justify-between"
    >
      <div class="w-1/3 md:w-auto">00 <br />WELCOME</div>
      <div class={"w-1/3 md:w-auto text-center flex items-end pb-2"}>
        <p>
          © MANUELENIS 2024 • Site by <span class="underline"
            >JOSÉ GUTIERREZ</span
          >
        </p>
      </div>
      <div class={"w-1/3 md:w-auto flex gap-2 items-center justify-end"}>
        <a
          data-hover="true"
          class="px-2 md:px-4 py-2"
          target="_blank"
          href="https://www.instagram.com/"
        >
          <Icon width="20" height="24" name="instagram" />
        </a>
        <a
          data-hover="true"
          class="px-2 md:px-4 py-2"
          target="_blank"
          href="https://www.youtube.com/"
        >
          <Icon width="24" height="24" name="vimeo" />
        </a>
        <a
          data-hover="true"
          class="px-2 md:px-4 py-2"
          target="_blank"
          href="https://www.vimeo.com/"
        >
          <Icon width="18" height="32" name="youtube" />
        </a>
      </div>
    </div>
  </div>
</footer>
