---
import lenisLogo from "@/assets/lenis-logo.png";
import NavLink from "@/components/NavLink.astro";
import { Image } from "astro:assets";
---

<style>
  body.content--red header {
    color: var(--black);
  }

  body.content--red .header-logo {
    color: var(--black);
  }

  body.content--red .header-logo-image {
    filter: brightness(0);
    transition: filter 0.2s ease-in-out;
  }
</style>

<header
  class="fixed top-10 left-0 w-full h-16 flex items-center md:justify-center justify-between z-10 text-primary px-10"
>
  <a id="header-logo" class="md:absolute left-20" href="/">
    <Image src={lenisLogo} class="header-logo-image" alt="Lenis logo" />
  </a>
  <nav class="hidden md:flex">
    <ul class="flex gap-x-20">
      <li class="flex">
        <NavLink href="/about">About</NavLink>
      </li>
      <li class="flex">
        <NavLink href="/reel">Reel</NavLink>
      </li>
      <li class="flex">
        <NavLink href="/contact">Contact</NavLink>
      </li>
    </ul>
  </nav>

  <button id="mobile-menu-btn" class="nav-link md:hidden">Menu</button>

  <nav
    id="mobile-menu"
    class="fixed top-0 left-0 bg-primary w-full h-full items-center justify-center flex flex-col text-black opacity-0"
  >
    <div class="absolute right-10 top-11">
      <button id="mobile-menu-close" class="nav-link">Close</button>
    </div>

    <ul class="flex flex-col gap-y-5 md:hidden w-full text-black">
      <li>
        <NavLink className="mobile-nav-link opacity-0 translate-y-5" href="/"
          >Home
        </NavLink>
      </li>
      <li>
        <NavLink
          className="mobile-nav-link opacity-0 translate-y-5"
          href="/about"
          >About
        </NavLink>
      </li>
      <li>
        <NavLink
          className="mobile-nav-link opacity-0 translate-y-5"
          href="/reel"
          >Reel
        </NavLink>
      </li>
      <li>
        <NavLink
          className="mobile-nav-link opacity-0 translate-y-5"
          href="/contact"
          >Contact
        </NavLink>
      </li>
    </ul>
  </nav>
</header>
